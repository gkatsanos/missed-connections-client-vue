{
  "name": "missed-connections-client-vue",
  "version": "1.0.1",
  "description": "An app about people who're trying to find each other.",
  "author": "George Katsanos <george@gplus.gr>",
  "private": false,
  "engines": {
    "node": ">=10.6.0",
    "yarn": ">=1.12.3"
  },
  "scripts": {
    "build": "NODE_ENV=production node ./build/build.js",
    "dev": "./node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --progress --config build/webpack.dev.conf.js",
    "start": "serve -s dist",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "yarn test --watchAll",
    "lint": "eslint --ext .js,.vue src",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:gkatsanos/missed-connections-client.git"
  },
  "dependencies": {
    "concurrently": "^3.5.0",
    "popper.js": "^1.12.3",
    "serve": "^6.4.1",
    "vee-validate": "^2.0.0-rc.14",
    "vue": "^2.5.3",
    "vue-router": "3.0.1",
    "vuetify": "^0.16.9",
    "vuex": "^3.0.1",
    "vuex-persistedstate": "^2.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "axios": "^0.17.0",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^21.0.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "chalk": "^2.0.1",
    "coveralls": "3.0.0",
    "concurrently": "^3.5.0",
    "connect-history-api-fallback": "^1.3.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.3.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-html": "^3.2.2",
    "eslint-plugin-import": "^2.2.0",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.1.3",
    "html-webpack-plugin": "^2.30.1",
    "http-proxy-middleware": "^0.17.3",
    "jest": "^21.2.1",
    "jest-serializer-vue": "^0.2.0",
    "node-notifier": "^5.1.2",
    "node-sass": "^4.13.0",
    "opn": "^5.1.0",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "ora": "^1.2.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "rimraf": "^2.6.0",
    "sass-loader": "^6.0.6",
    "semver": "^5.3.0",
    "shelljs": "^0.7.6",
    "url-loader": "^0.5.8",
    "vue-jest": "^1.0.1",
    "vue-loader": "^13.4.0",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.5.3",
    "vue-test-utils": "^1.0.0-beta.4",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "license": "MIT",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!src/main.js",
      "!src/router/index.js",
      "!**/node_modules/**"
    ],
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js",
      "@(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "mapCoverage": true,
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/server"
    ]
  }
}
